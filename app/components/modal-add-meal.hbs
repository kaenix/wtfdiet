<div class="c-modal-add-meal c-modal-dialog">
  <div class="c-modal-dialog__header">
    <h3 class="c-modal-dialog__heading">Add Meal</h3>
    <div class="c-modal-dialog__heading-actions">
      <button type="button" class="c-modal-dialog__close-action"
        title="close dialog"
        {{on "click" (close-modal)}}>
        X
      </button>
    </div>
  </div>
  <div class="c-modal-dialog__content">
    <label>
      <span class="c-label__label">Meal Name:</span>
      <Input @type="text" @value={{this.mealName}}/>
    </label>
    {{yield}}
  </div>
  <div class="c-modal-dialog__footer">
    <div class="c-modal-dialog__footer-actions">
      <button type="button" class="c-modal-add-meal__save-action"
        {{on "click" this.addMeal}}>
        Add Meal
      </button>
    </div>
  </div>
</div>