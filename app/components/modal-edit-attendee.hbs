<div class="c-modal-edit-attendee c-modal-dialog">
  <div class="c-modal-dialog__header">
    <h3 class="c-modal-dialog__heading">Edit Attendee</h3>
    <div class="c-modal-dialog__heading-actions">
      <button type="button" class="c-modal-dialog__close-action"
        title="close dialog"
        {{on "click" (close-modal)}}>
        X
      </button>
    </div>
  </div>
  <div class="c-modal-dialog__content">
    <label>
      <span class="c-label__label">Name:</span>
      <Input @type="text" @value={{this.attendeeName}}/>
    </label>
    <label>
      <span class="c-label__label">Color:</span>
      <ColorPicker @color={{this.attendeeColor}}
        @attendee={{this.attendee}}
        @onPick={{this.onPickColor}}
      />
    </label>
    {{yield}}
  </div>
  <div class="c-modal-dialog__footer">
    <div class="c-modal-dialog__footer-actions">
      <button type="button" class="c-modal-edit-attendee__delete-action"
        {{on "click" this.deleteAttendee}}>
        Delete
      </button>
      <button type="button" class="c-modal-edit-attendee__save-action"
        {{on "click" this.updateAttendee}}>
        Update
      </button>
    </div>
  </div>
</div>
